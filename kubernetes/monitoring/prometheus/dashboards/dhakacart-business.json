{
    "dashboard": {
        "id": null,
        "title": "DhakaCart Business Metrics",
        "tags": [
            "dhakacart",
            "business",
            "kpi"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Orders per Hour",
                "type": "graph",
                "targets": [
                    {
                        "expr": "increase(dhakacart_orders_total[1h])",
                        "legendFormat": "Orders Created"
                    },
                    {
                        "expr": "increase(dhakacart_orders_completed_total[1h])",
                        "legendFormat": "Orders Completed"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Orders"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Revenue per Hour",
                "type": "graph",
                "targets": [
                    {
                        "expr": "increase(dhakacart_revenue_total[1h])",
                        "legendFormat": "Revenue (BDT)"
                    }
                ],
                "yAxes": [
                    {
                        "label": "BDT"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Active Users",
                "type": "graph",
                "targets": [
                    {
                        "expr": "dhakacart_active_users",
                        "legendFormat": "Active Users"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Users"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Cart Abandonment Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "(increase(dhakacart_carts_created_total[1h]) - increase(dhakacart_orders_total[1h])) / increase(dhakacart_carts_created_total[1h]) * 100",
                        "legendFormat": "Abandonment Rate %"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Percentage",
                        "max": 100,
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Top Products by Sales",
                "type": "table",
                "targets": [
                    {
                        "expr": "topk(10, increase(dhakacart_product_sales_total[24h]))",
                        "legendFormat": "{{product_name}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "Average Order Value",
                "type": "stat",
                "targets": [
                    {
                        "expr": "dhakacart_revenue_total / dhakacart_orders_total",
                        "legendFormat": "AOV (BDT)"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                }
            },
            {
                "id": 7,
                "title": "Conversion Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(dhakacart_orders_total[5m]) / rate(dhakacart_page_views_total{page=\"product\"}[5m]) * 100",
                        "legendFormat": "Conversion Rate %"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Percentage"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 24
                }
            },
            {
                "id": 8,
                "title": "Payment Success Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(dhakacart_payments_successful_total[5m]) / rate(dhakacart_payments_attempted_total[5m]) * 100",
                        "legendFormat": "Success Rate %"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Percentage",
                        "max": 100,
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 24
                }
            }
        ],
        "time": {
            "from": "now-24h",
            "to": "now"
        },
        "refresh": "1m"
    }
}