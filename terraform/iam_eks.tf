# IRSA (IAM Roles for Service Accounts) for VPC CNI
data "aws_iam_policy_document" "vpc_cni_assume_role_policy" {
  statement {
    actions = ["sts:AssumeRoleWithWebIdentity"]
    effect  = "Allow"

    condition {
      test     = "StringEquals"
      variable = "${replace(aws_iam_openid_connect_provider.eks.url, "https://", "")}:sub"
      values   = ["system:serviceaccount:kube-system:aws-node"]
    }

    principals {
      identifiers = [aws_iam_openid_connect_provider.eks.arn]
      type        = "Federated"
    }
  }
}

resource "aws_iam_role" "vpc_cni_irsa" {
  name               = "${local.name_prefix}-vpc-cni-irsa-role"
  assume_role_policy = data.aws_iam_policy_document.vpc_cni_assume_role_policy.json

  tags = merge(local.common_tags, {
    Name = "${local.name_prefix}-vpc-cni-irsa-role"
  })
}

